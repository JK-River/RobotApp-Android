<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/background_color_green">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_horizontal">

        <FrameLayout android:layout_width="250dp"
                     android:layout_height="250dp"
                     android:layout_gravity="center_horizontal">

            <ImageView android:id="@+id/calling_ring_big"
                       android:layout_width="250dp"
                       android:layout_height="250dp"
                       android:alpha="0"
                       android:src="@drawable/calling_ring_big"/>

            <ImageView android:id="@+id/calling_ring_small"
                       android:layout_width="190dp"
                       android:layout_height="190dp"
                       android:alpha="0"
                       android:layout_gravity="center"
                       android:src="@drawable/calling_ring_small"/>

            <ImageView
                    android:id="@+id/calling_head"
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/robot_logo"/>

        </FrameLayout>

        <TextView android:id="@+id/calling_status"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:textSize="18sp"
                  android:textColor="@color/white"
                  android:text="视频通话呼叫中"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="45dp"
                      android:orientation="horizontal">

            <LinearLayout android:id="@+id/calling_hangup"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="35dp"
                          android:layout_marginRight="35dp"
                          android:orientation="vertical"
                          android:gravity="center_horizontal">

                <ImageView android:layout_width="55dp"
                           android:layout_height="55dp"
                           android:src="@drawable/hang_up_icon"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:textColor="@color/white"
                          android:textSize="14sp"
                          android:text="挂断"/>

            </LinearLayout>

            <LinearLayout android:id="@+id/calling_accept"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="35dp"
                          android:layout_marginRight="35dp"
                          android:orientation="vertical"
                          android:gravity="center_horizontal">

                <ImageView android:layout_width="55dp"
                           android:layout_height="55dp"
                           android:src="@drawable/calling_accept_icon"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:textColor="@color/white"
                          android:textSize="14sp"
                          android:text="接听"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>